<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.FullBoard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/mainTimeBoard"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@android:color/background_dark"
            android:clickable="true"
            android:focusable="true"
            android:text="06:00"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="112sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="4000sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/background_dark"
            android:orientation="horizontal">

            <Button
                android:id="@+id/toreHeimBoard"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/background_dark"
                android:text="@string/_00"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="4000sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

            <Button
                android:id="@+id/shotclock_angriffszeit2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/background_dark"
                android:clickable="true"
                android:focusable="true"
                android:text="30"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="4000sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="20sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

            <Button
                android:id="@+id/toreGastBoard"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/background_dark"
                android:text="@string/_00"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="4000sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>