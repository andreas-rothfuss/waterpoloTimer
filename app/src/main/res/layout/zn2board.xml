<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="de.wasserball.wabaclock.main.zn2board">

    <LinearLayout
        android:id="@+id/layoutZN2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:text="Shotclock control view for ZN2"
            android:textColor="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/shotclock_zn2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@android:color/background_dark"
            android:clickable="true"
            android:focusable="true"
            android:onClick="startStopShotclock"
            android:text="30"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="4000sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="20sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/resetMajorZN2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_dark"
                android:clickable="true"
                android:focusable="true"
                android:onClick="resetShotclockMajor"
                android:text="@string/reset_30"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="200sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/resetMinorZN2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_dark"
                android:clickable="true"
                android:focusable="true"
                android:onClick="resetShotclockMinor"
                android:text="@string/reset_20"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="200sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>