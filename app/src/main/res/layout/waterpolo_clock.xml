<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".main.WaterpoloClock">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/background_dark"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/background_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titelTimeoutHeim"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/timeout"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:focusable="true" />

                <Button
                    android:id="@+id/timeoutHeim"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickTimeoutHome"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/_0"
                    android:textColor="@android:color/background_light"
                    android:focusable="true" />

                <Button
                    android:id="@+id/edit2"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="resetAll"
                    android:text="@string/reset_all"
                    android:textColor="@color/colorPrimaryDark"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    android:focusable="true" />

                <Button
                    android:id="@+id/settings"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:onClick="openSettings"
                    android:text="@string/settings"
                    android:textColor="@color/colorPrimaryDark"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEditMinutes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_dark"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/titelEditMinutes"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/min"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/editMinutesPlus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickMinutesPlus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/plus"
                    android:textColor="@android:color/holo_red_dark"
                    android:focusable="true" />

                <Button
                    android:id="@+id/editMinutesMinus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickMinutesMinus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/minus"
                    android:textColor="@android:color/holo_red_dark"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@android:color/background_dark"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/editPeriodPlus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickPeriodPlus"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeStepGranularity="2sp"
                        android:text="@string/plus"
                        android:textColor="@color/colorPrimaryDark" />

                    <Button
                        android:id="@+id/viertelOderPause"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@android:color/background_dark"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeStepGranularity="2sp"
                        android:text="@string/displayStringPeriod"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark" />

                    <Button
                        android:id="@+id/editPeriodMinus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickPeriodMinus"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeStepGranularity="2sp"
                        android:text="@string/minus"
                        android:textColor="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@android:color/background_dark"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/mainTime"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickTime"
                        android:text="@string/testMainTime"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="112sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEditSeconds"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_dark"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/titelEditSeconds"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/min"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/editSecondsPlus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickSecondsPlus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/plus"
                    android:textColor="@android:color/holo_red_dark"
                    android:focusable="true" />

                <Button
                    android:id="@+id/editSecondsMinus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickSecondsMinus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/minus"
                    android:textColor="@android:color/holo_red_dark"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/background_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titelTimeoutGast"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/timeout"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_blue_dark" />

                <Button
                    android:id="@+id/timeoutGast"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickTimeoutGuest"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/_0"
                    android:textColor="@android:color/holo_blue_dark"
                    android:focusable="true" />

                <Button
                    android:id="@+id/edit"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="editTime"
                    android:text="@string/edit_times"
                    android:textColor="@color/colorPrimaryDark"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    android:focusable="true" />

                <Button
                    android:id="@+id/settings2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textColor="@color/colorPrimaryDark"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/background_dark"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/background_dark"
                android:orientation="vertical">

                <Button
                    android:id="@+id/toreHeimPlus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickToreHomePlus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/plus"
                    android:textColor="@android:color/background_light"
                    android:focusable="true" />

                <Button
                    android:id="@+id/toreHeimMinus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickToreHomeMinus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/minus"
                    android:textColor="@android:color/background_light"
                    android:focusable="true" />
            </LinearLayout>

            <Button
                android:id="@+id/toreHeim"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/background_dark"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="200sp"
                app:autoSizeStepGranularity="2sp"
                android:text="@string/_00"
                android:textAlignment="textStart"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@android:color/background_dark"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/angriffzeit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickTime"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/tesOffenceTime"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEditAngriffzeit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_dark"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/editAngriffzeitPlus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClickOffenceTimePlus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/plus"
                    android:textColor="@android:color/holo_orange_light" />

                <Button
                    android:id="@+id/editAngriffzeitMinus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClickOffenceTimeMinus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/minus"
                    android:textColor="@android:color/holo_orange_light" />

            </LinearLayout>

            <Button
                android:id="@+id/toreGast"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/background_dark"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="200sp"
                app:autoSizeStepGranularity="2sp"
                android:text="@string/_00"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/background_dark"
                android:orientation="vertical">

                <Button
                    android:id="@+id/toreGastPlus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickToreGuestPlus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/plus"
                    android:textColor="@android:color/holo_blue_dark"
                    android:focusable="true" />

                <Button
                    android:id="@+id/toreGastMinus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:onClick="onClickToreGuestMinus"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeStepGranularity="2sp"
                    android:text="@string/minus"
                    android:textColor="@android:color/holo_blue_dark"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/background_dark"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <Button
                    android:id="@+id/shotclock4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="openMainTime"
                    android:text="@string/main_time"
                    android:textColor="@color/colorPrimaryDark"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/shotclock"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="openShotclock"
                    android:text="@string/shotclock"
                    android:textColor="@color/colorPrimaryDark"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <Button
                android:id="@+id/reset30"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickReset30"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="200sp"
                app:autoSizeStepGranularity="2sp"
                android:text="@string/reset_30"
                android:textColor="@android:color/holo_orange_light" />

            <Button
                android:id="@+id/reset20"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickReset20"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="200sp"
                app:autoSizeStepGranularity="2sp"
                android:text="@string/reset_20"
                android:textColor="@android:color/holo_orange_light" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button16"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="openTimeAndScoreBoard"
                    android:text="@string/mixed_board"
                    android:textColor="@color/colorPrimaryDark"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/button2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="openScoreBoard"
                    android:text="@string/scoreboard"
                    android:textColor="@color/colorPrimaryDark"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>