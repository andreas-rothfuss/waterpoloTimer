<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@android:color/background_dark"
    tools:context="de.wasserball.wabaclock.main.WaterpoloClock">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@android:color/background_dark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/teamHome"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:onClick="onHomeTeamNameClicked"
                    android:text="@string/home_team_default_name"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_light"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/exclusionTimerHome"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:onClick="onExclusionTimeHomeClicked"
                    android:text="@string/_00"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/background_light"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/editPeriodMinus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:contentDescription="@string/period_minus_content_description"
                    android:focusable="true"
                    android:onClick="onClickPeriodMinus"
                    android:text="@string/minus"
                    android:textColor="@color/cyan"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/viertelOderPause"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@android:color/background_dark"
                    android:text="@string/displayStringPeriod"
                    android:textAlignment="center"
                    android:textColor="@color/cyan"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/editPeriodPlus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:contentDescription="@string/period_plus_content_description"
                    android:focusable="true"
                    android:onClick="onClickPeriodPlus"
                    android:text="@string/plus"
                    android:textColor="@color/cyan"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />


                <Button
                    android:id="@+id/exclusionTimerGuest"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:onClick="onExclusionTimeGuestClicked"
                    android:text="@string/_00"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/teamGuest"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:onClick="onGuestTeamNameClicked"
                    android:text="@string/guest_team_default_name"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blue"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@android:color/background_dark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titelTimeoutHeim"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:contentDescription="@string/title_timeouts_home_content_description"
                        android:focusable="true"
                        android:minHeight="48dp"
                        android:text="@string/timeout"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/editTimeoutsHome"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/background_dark"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/timeoutHeimPlus"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@android:color/background_dark"
                                android:clickable="true"
                                android:contentDescription="@string/timeouts_home_team_plus"
                                android:focusable="true"
                                android:minWidth="32dp"
                                android:minHeight="48dp"
                                android:onClick="onClickTimeoutsHomePlus"
                                android:text="@string/plus"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="200sp"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />

                            <Button
                                android:id="@+id/timeoutHeimMinus"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@android:color/background_dark"
                                android:clickable="true"
                                android:contentDescription="@string/minus"
                                android:focusable="true"
                                android:onClick="onClickTimeoutsHomeMinus"
                                android:text="@string/timeouts_home_minus"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="200sp"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/timeoutHeim"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/background_dark"
                            android:clickable="true"
                            android:contentDescription="@string/timeouts_home_content_description"
                            android:focusable="true"
                            android:onClick="onClickTimeoutHome"
                            android:text="@string/_0"
                            android:textColor="@android:color/background_light"
                            app:autoSizeMaxTextSize="200sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/settings"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/settings_content_description"
                        android:minHeight="48dp"
                        android:onClick="openSettings"
                        android:padding="@dimen/fab_margin"
                        android:scaleType="centerInside"
                        android:src="@drawable/settings_icon"
                        android:text="@string/settings"
                        android:textColor="@color/colorPrimaryDark"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutEditMinutes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/editMinutesPlus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickMinutesPlus"
                        android:text="@string/plus"
                        android:textColor="@android:color/holo_red_dark"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/editMinutesMinus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickMinutesMinus"
                        android:text="@string/minus"
                        android:textColor="@android:color/holo_red_dark"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <Button
                    android:id="@+id/mainTime"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@android:color/background_dark"
                    android:clickable="true"
                    android:contentDescription="@string/main_time_content_description"
                    android:focusable="true"
                    android:onClick="onClickTime"
                    android:text="@string/main_time_default_val"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="200sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="600sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="4sp"
                    app:autoSizeTextType="uniform" />

                <LinearLayout
                    android:id="@+id/layoutEditSeconds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/editSecondsPlus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickSecondsPlus"
                        android:text="@string/plus"
                        android:textColor="@android:color/holo_red_dark"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/editSecondsMinus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickSecondsMinus"
                        android:text="@string/minus"
                        android:textColor="@android:color/holo_red_dark"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@android:color/background_dark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titelTimeoutGast"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/title_timeouts_guest_content_description"
                        android:minHeight="48dp"
                        android:text="@string/timeout"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/timeoutGast"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/background_dark"
                            android:clickable="true"
                            android:contentDescription="@string/timeouts_guest_content_description"
                            android:focusable="true"
                            android:onClick="onClickTimeoutGuest"
                            android:text="@string/_0"
                            android:textColor="@color/blue"
                            app:autoSizeMaxTextSize="200sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />

                        <LinearLayout
                            android:id="@+id/editTimeoutsGuest"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/background_dark"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/timeoutGuestPlus"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@android:color/background_dark"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="onClickTimeoutsGuestPlus"
                                android:text="@string/plus"
                                android:textColor="@color/blue"
                                app:autoSizeMaxTextSize="200sp"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />

                            <Button
                                android:id="@+id/timeoutGuestMinus"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@android:color/background_dark"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="onClickTimeoutsGuestMinus"
                                android:text="@string/minus"
                                android:textColor="@color/blue"
                                app:autoSizeMaxTextSize="200sp"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeStepGranularity="2sp"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/edit"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="48dp"
                        android:onClick="editTime"
                        android:text="@string/edit_times"
                        android:textColor="@color/cyan"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@android:color/background_dark"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/editGoalsHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/toreHeimPlus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickToreHomePlus"
                        android:text="@string/plus"
                        android:textColor="@android:color/background_light"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/toreHeimMinus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickToreHomeMinus"
                        android:text="@string/minus"
                        android:textColor="@android:color/background_light"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <Button
                    android:id="@+id/toreHeim"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:contentDescription="@string/goals_home_content_description"
                    android:onClick="onClickToreHomePlus"
                    android:text="@string/_00"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@android:color/background_dark"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/angriffzeit"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:contentDescription="@string/shotclock_content_description"
                        android:focusable="true"
                        android:onClick="onClickTime"
                        android:text="@string/tesOffenceTime"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_orange_light"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutEditAngriffzeit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/editAngriffzeitPlus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickOffenceTimePlus"
                        android:text="@string/plus"
                        android:textColor="@android:color/holo_orange_light"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/editAngriffzeitMinus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickOffenceTimeMinus"
                        android:text="@string/minus"
                        android:textColor="@android:color/holo_orange_light"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <Button
                    android:id="@+id/toreGast"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:onClick="onClickToreGuestPlus"
                    android:text="@string/_00"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <LinearLayout
                    android:id="@+id/editGoalsGuest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/background_dark"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/toreGastPlus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickToreGuestPlus"
                        android:text="@string/plus"
                        android:textColor="@color/blue"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/toreGastMinus"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClickToreGuestMinus"
                        android:text="@string/minus"
                        android:textColor="@color/blue"
                        app:autoSizeMaxTextSize="200sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutButtons"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@android:color/background_dark"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/edit2"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/background_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="resetAll"
                        android:text="@string/reset_all"
                        android:textColor="@color/cyan"
                        app:autoSizeMaxTextSize="34sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <Button
                    android:id="@+id/reset30"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClickReset30"
                    android:text="@string/reset_30"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <Button
                    android:id="@+id/reset20"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClickReset20"
                    android:text="@string/reset_20"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="200sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnBoards"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="openBoards"
                        android:text="@string/boards_content_description"
                        android:textColor="@color/cyan"
                        app:autoSizeMaxTextSize="34sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>