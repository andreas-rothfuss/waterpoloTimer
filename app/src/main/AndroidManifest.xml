        <activity
            android:name="de.wasserball.wabaclock.main.TimeAndScoreBoard"
            android:label="@string/title_activity_time_and_score_board"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"/>
        <activity
            android:name="de.wasserball.wabaclock.main.MainTimeBoard"
            android:screenOrientation="landscape"
            android:label="MainTimeBoard"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"/>
        <activity
            android:name="de.wasserball.wabaclock.main.Scoreboard"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_scoreboard"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"/>
        <activity android:name="de.wasserball.wabaclock.main.Shotclock"
            android:label="Shotclock"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"/>
        <activity
            android:name="de.wasserball.wabaclock.main.ShotclockRemoteControl"
            android:label="RemoteControlBoardZN2"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"/>
    </application>

</manifest>