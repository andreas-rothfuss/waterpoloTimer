<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tvdarmsheim.wabaclock">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.tvdarmsheim.wabaclock.settings.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="de.tvdarmsheim.wabaclock.main.TimeAndScoreBoard"
            android:label="@string/title_activity_time_and_score_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="de.tvdarmsheim.wabaclock.main.Scoreboard"
            android:label="@string/title_activity_scoreboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="de.tvdarmsheim.wabaclock.main.MainTimeBoard"
            android:label="@string/title_activity_scoreboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="de.tvdarmsheim.wabaclock.main.Shotclock" />
        <activity
            android:name="de.tvdarmsheim.wabaclock.main.WaterpoloClock"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>